import java.util.*;
public class Main {
    public static void main(String args[]) {
      Scanner sc=new Scanner(System.in);
      String s=sc.nextLine();
      int n=s.length();
      int i,d=0;
      char a[]=s.toCharArray();
      for(i=0;i<n;i++)
      {
          if(a[i]=='1')
          {
              d+=Math.pow(2,n-i-1);
          }
      }
      System.out.print(d);
    }
}
